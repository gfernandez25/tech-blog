{{#if posts.length}}
    {{#each posts}}
        <article class="card">
            <header class="card-header">
                <a class="card-header-title" href="/post/{{id}}/edit">{{title}}</a>
                <p class="card-header-date">{{format_date created_at}}</p>
            </header>
        </article>
    {{/each}}
{{/if}}

<a class="add-post" href="/post/create-post">+ New Post</a>